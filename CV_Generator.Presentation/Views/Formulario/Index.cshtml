@{

}

@model InfoDTOModel
<div id="" class="home">
    <div id="" class="d-flex justify-content-center align-items-center h-100 panel">
        <div id="formulario" class="contenido container col-md-4">
            <p class="h3">Al cumplimentar el siguiente formulario recibirás mi CV automáticamente en tu e-mail:</p>
            @using (Html.BeginForm(FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(x => x.Nombre)
                    @Html.TextBoxFor(x => x.Nombre, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "validacion" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Apellidos)
                    @Html.TextBoxFor(x => x.Apellidos, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Apellidos, null, new { @class = "validacion" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Empresa)
                    @Html.TextBoxFor(x => x.Empresa, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Empresa, null, new { @class = "validacion" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Email)
                    @Html.TextBoxFor(x => x.Email, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Email, null, new { @class = "validacion" })
                </div>

                <button type="submit" id="btnSolicitar" class="btn btn-primary">Solicitar</button>
            }

        </div>
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-light d-none" id="spinner" style="width: 6rem; height: 6rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>
</div>